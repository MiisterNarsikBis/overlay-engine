body
  background #000
  color #fff
  font-family Arial

header
  margin 1rem
  display flex
  justify-content center

#main
  display flex

  section#habillage
    display block

    #video_wrap
      width 640px
      height 360px
      padding 0
      overflow hidden

    #video
      width 1920px
      height 1080px
      border 0
      transform scale(0.3333)
      transform-origin 0 0

section h2
  text-transform uppercase
  background #f0f0f0
  padding 5px
  color #000
  font-weight bold
  margin-bottom 1rem

#cmd
  margin 1rem 0
  display flex

  section
    margin 0 1rem

section#variables
  flex 1
  margin-left 1rem

button.message
  padding 5px 5px 5px 30px
  margin-left 1rem
  background #ccc url(../img/icons/pulse.svg) no-repeat 2px / 24px
  color #000
  border 0
  font-size 16px
  cursor pointer
  transition .2s all
  font-weight bold

  &[data-msg=\"AON\"]
    background #ccc url(../img/icons/mic.svg) no-repeat 0 / 30px

  &[data-msg=\"UPD\"]
    background #ccc url(../img/icons/refresh.svg) no-repeat 4px / 20px

  &:hover
    background-color #fff

button#conx
  border 0
  font-size 16px
  font-weight bold
  padding 5px

  &.connected
    background #c66

  &.disconnected
    background #6c6

.dump
  font-family monospace
  color #000
  background #fff
  font-size 16px

  th, td
    padding 10px

  th
    text-align right
    font-weight bold

  td
    text-align left
    color #f00
    width 100%

#message_response
  position absolute
  display none
  top 1rem
  left 1rem
  padding 5px
  background #0ba8ff
  color #fff
  font-weight bold

ol
  margin-left 40px
  list-style initial
  list-style-type decimal-leading-zero

button.delete
  cursor pointer
  background #292933 url(../img/icons/trash.svg) no-repeat center center / 24px
  color #fff
  border 0
  padding 16px
  margin-right 5px
  margin-bottom 5px
  font-weight bold
  text-transform uppercase

  &:hover
    background-color #f7303c
