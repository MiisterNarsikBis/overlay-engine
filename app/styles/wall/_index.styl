body
  background #000
  color #fff
  font-family Arial

.wall
  display flex
  max-width 915px
  flex-direction column
  margin 1rem auto
  align-items center

  .social
    position relative
    font-family Arial
    background-color #fff
    width 100%
    border-radius 1rem
    padding 1rem
    box-shadow 2px 2px 5px #000
    margin-bottom 1rem

    .soc__hdr
      display flex
      align-items center

      .soc_avatar
        width 80px
        height 80px
        border-radius 50%
        margin-right 1rem

      .soc_name
        font-size 26px
        font-weight bold
        line-height 32px
        color #000

      .soc_screen_name
        font-size 22px
        font-weight bold
        line-height 32px
        color rgb(136, 153, 166)

    .soc_text
      color #000
      font-size 30px
      line-height 34px
      padding-top 1rem

    button
      position absolute
      background #c0c0c0
      padding .5rem 1rem
      color #f00
      top 1rem
      right 1rem
      font-size 1.8rem
      font-weight bold
      cursor pointer
      border 1px solid

      &:hover
        background #000000
        color #f00

