/**
 * Stylage de l'habillage
 */

@import _fonts
@import _colors

body
  background-color chromakey

/* conteneur global */

#global
  width 1920px
  height 1080px
  position relative
  overflow hidden

/* logo */

#logo
  position absolute
  z-index 100
  top 30px
  left 30px
  background url(/img/logo.png) no-repeat center / cover
  width 150px
  height 150px

/* chaque écran est encapsulé dans une section */

section
  width 1920px
  height 1080px
  display none
  left 0
  top 0
  position absolute

/* visuel flouté de fond pour certains écrans */

.background
  position absolute
  width 1920px
  height 1080px
  background-color #000
  background-size cover
  filter blur(20px) brightness(.5)
  transform scale(1.5, 1.5)
  overflow hidden

/* visuel panoramique */

.pano
  position absolute
  width 1062px
  height 400px
  background-repeat no-repeat
  background-size cover
  left 429px
  top 220px

  &:after
    position absolute
    content ' '
    width 1062px
    height 60px
    background url(../img/shadow-pano.png) no-repeat 0 0
    bottom -60px

@import _clock
@import _social
@import _onair
@import _footer

.icon
  position absolute
  z-index 10
  width 32px
  height 32px
  background-size contain
  background-repeat no-repeat
  animation .5s bounce
  &.angry
    background-image url(/img/reactions/angry.svg)
  &.haha
    background-image url(/img/reactions/haha.svg)
  &.like
    background-image url(/img/reactions/like.svg)
  &.love
    background-image url(/img/reactions/love.svg)
  &.sad
    background-image url(/img/reactions/sad.svg)
  &.wow
    background-image url(/img/reactions/wow.svg)

@keyframes bounce{
  0%{
    opacity: 0;
    transform: scale(0.3) translate3d(0,0,0);
  }
  50%{
    opacity: 0.9;
    transform: scale(1.25);
  }
  80%{
    opacity: 1;
    transform: scale(0.89);
  }
  100%{
    opacity: 1;
    transform: scale(1) translate3d(0,0,0);
  }
}
