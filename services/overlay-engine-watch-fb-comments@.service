[Unit]
Description=Surveille les commentaires du Facebook Live %I
After=network.target

[Service]
User=root
Group=root
ExecStart=/usr/bin/node /var/www/overlay-engine/app/watch-fb-comments.js %i
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=root
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
